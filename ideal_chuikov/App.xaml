<Application x:Class="ideal_chuikov.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ideal_chuikov"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Button}">
            <!-- Цвет текста кнопки -->
            <Setter Property="Background" Value="#696969" />
            <Setter Property="Foreground" Value="White" />
            
            <!-- Новый шрифт -->
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style TargetType="Button" x:Key="GoBack">
            <Setter Property="Background" Value="#363636" />
            <Setter Property="Foreground" Value="White" />

            <!-- Новый шрифт -->
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style TargetType="Button" x:Key="RootButton">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Background" Value="#48AF17" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="Button" x:Key="ManagerButton">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Background" Value="Wheat" />
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="30" />
        </Style>

        <Style TargetType="Button" x:Key="ClentButton">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#DAA520" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10" />
        </Style>

        <!--Редактировать/удалить-->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Sans" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!--Описание товара-->
        <Style TargetType="TextBlock" x:Key="small">
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="large">
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="Foreground" Value="#964B00"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="kolvo">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Foreground" Value="#964B00"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="skidka">
            <Setter Property="FontSize" Value="35"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style>
    </Application.Resources>
</Application>
