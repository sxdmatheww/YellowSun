<Page x:Class="ideal_chuikov.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ideal_chuikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock FontSize="40">Авторизация</TextBlock>
            <TextBlock FontSize="30" HorizontalAlignment="Center">Логин</TextBlock>
            <TextBox Height="25" Name="Login"></TextBox>
            <TextBlock FontSize="30" HorizontalAlignment="Center">Пароль</TextBlock>
            <PasswordBox Height="25" Name="Password"></PasswordBox>
            
            <Button Click="Vxod" Name="vxodbnt">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
