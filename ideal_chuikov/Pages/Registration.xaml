<Page x:Class="ideal_chuikov.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ideal_chuikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="25">Регистрация</TextBlock>
            <TextBlock HorizontalAlignment="Center">Логин</TextBlock>
            <TextBox Name="Login"></TextBox>
            <TextBlock HorizontalAlignment="Center">Пароль</TextBlock>
            <PasswordBox Name="Password"></PasswordBox>
            <TextBlock HorizontalAlignment="Center">Подтвердите пароль</TextBlock>
            <PasswordBox Name="ConfirmPassword"></PasswordBox>
            <Button Click="Registraciya_Click" Width="210">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Page>
